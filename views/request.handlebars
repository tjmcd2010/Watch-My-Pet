<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2> <!-- ?????replace to ownerName as in Owner.js file from models?????-->
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Pet Siiting Request:</h3>

    <form class="form new-request-form">
      <div class="form-group">
        <label for="pet-name">Pet name:</label>
        <input class="form-input" type="text" id="pet-name" name="pet-name" />
      </div>
      <div class="form-group">
        <label for="pet-type">Pet type:</label>
        <input class="form-input" type="number" id="pet-type" name="pet-type" />
      </div>
      <div class="form-group">
        <label for="pet-breed">Pet breed:</label>
        <input class="form-input" id="pet-breed" name="pet-breed" />
      </div>
      <div class="form-group">
        <!--??? create <div> for each input as a the PetSittingRequest model???-->
       
       
       
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if requests.length}}
  <div class="col-md-6 project-list">
    <h3>Current Requests:</h3>

    {{#each requests as |request|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/request/{{request.id}}">{{request.name}}</a></h4> <!--??? request.name???? -->
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{request.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/request.js"></script>
